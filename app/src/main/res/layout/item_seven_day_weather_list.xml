<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    tools:context=".adapter.SevenDayWeatherAdapter"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="星期日"
        android:textColor="@color/black54"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="4月25日"
        android:textColor="@color/black38"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/iv_icon_weather1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        tools:background="@drawable/icon_weather_overcast"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_weather1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="多云"
        android:textColor="@color/black87"
        android:textSize="13sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_high_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:text="22°"
        android:textColor="@color/black70"
        android:textSize="13sp"/>

    <!--<ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_v_line"
        tools:ignore="ContentDescription" />-->

    <TextView
        android:id="@+id/tv_low_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        tools:text="12°"
        android:textColor="@color/black70"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/iv_icon_weather2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        tools:background="@drawable/icon_weather_overcast"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_weather2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black87"
        android:textSize="13sp"
        tools:ignore="SmallSp"
        tools:text="阴" />

    <TextView
        android:id="@+id/tv_wind_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="东北风"
        android:textColor="@color/black54"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_wind_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3-5级"
        android:textColor="@color/black45"
        android:textSize="10sp"
        tools:ignore="SmallSp" />


</LinearLayout>






